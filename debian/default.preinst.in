#!/bin/sh
# preinst script for tbxsosd* packages

set -e

PKG=@PKG_NAME@
DIR=/usr/share/teambox/tbxsosd/config-stock

if [ upgrade != "$1" ] || dpkg --compare-versions "$2" lt 1.4; then
    dpkg-divert \
        --quiet \
        --package $PKG \
        --add \
        --rename \
        --divert $DIR/tbxsosd.conf.common $DIR/tbxsosd.conf    
fi

#DEBHELPER#

exit 0
