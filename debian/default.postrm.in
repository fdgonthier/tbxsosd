#!/bin/sh
# postrm script for tbxsosd* packages

set -e

PKG=@PKG_NAME@
DIR=/usr/share/teambox/tbxsosd/config-stock

remove_divert() {
    dpkg-divert \
        --quiet \
        --package $PKG \
        --remove \
        --rename \
        --divert $DIR/tbxsosd.conf.common $DIR/tbxsosd.conf
}

# 
# This is based on code found in the Debian Policy Manual, section G.
#
if [ remove = "$1" -o abort-install = "$1" -o disappear = "$1" ]; then
    remove_divert
fi
if [ abort-upgrade = "$1" ] && dpkg --compare-versions "$2" lt 1.4; then
    remove_divert
fi    

if [ purge = "$1" ]; then
    if [ -d /var/cache/teambox ]; then
        rm -rf /var/cache/teambox
    fi
fi

#DEBHELPER#

exit 0
